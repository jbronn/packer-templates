{
    "builders": [
        {
            "boot_command": [
                "<enter><enter><f6><esc><wait> ",
                "autoinstall net.ifnames=0 biosdevname=0 ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
                "<enter>"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "APT_LISTBUGS_FRONTEND=none",
                "APT_LISTCHANGES_FRONTEND=none",
                "DEBIAN_FRONTEND=noninteractive",
                "HOME=/home/{{user `ssh_username`}}",
                "VBOXGUEST={{user `guest_additions_mode`}}"
            ],
            "execute_command": "chmod +x {{.Path}}; sudo bash -c '{{ .Vars }} {{ .Path }}'",
            "scripts": [
                "scripts/common/cloud-init-wait.sh",
                "scripts/common/vboxguest.sh",
                "scripts/common/sshd.sh",
                "scripts/ubuntu/cleanup.sh",
                "scripts/common/zerofree.sh"
            ]
        }
    ],
    "variables": {
        "guest_os_type": "Ubuntu_64",
        "ssh_handshake_attempts": "1000",
        "ssh_username": "vagrant",
        "shutdown_command": "sudo shutdown -P now"
    }
}
